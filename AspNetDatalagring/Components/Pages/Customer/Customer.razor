@page "/customer"
@using Business.Services.Customer
@attribute [StreamRendering]
@inject ICustomerService CustomerService

<PageTitle>Customers</PageTitle>

<h1>Customers</h1>

<p>Kunder:</p>

@if (customers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var customer in customers)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
            </tr>
        }
        </tbody>
    </table>
}

@code {
    
    private List<Business.Models.Customer> customers;

    protected override async Task OnInitializedAsync()
    {
        customers = await CustomerService.GetCustomersAsync(CancellationToken.None);
    }
}