@model ProjectViewModel

<div class="project card" data-project-id="@Model.Id">
    <div class="card-header">
        <div class="project-image">
            <img src="@Model.ProjectImage" alt="template project">
        </div>
        <span class="project-name">@Model.ProjectName</span>
        <span class="client-name">@Model.ClientName</span>

        <div id="project-account-container">
            <button type="button" data-type="dropdown" data-target="#project-dropdown-@Model.Id" class="btn-action">
                <i class="fa-solid fa-ellipsis"></i>
            </button>
            <div id="project-dropdown-@Model.Id" class="dropdown">
                <nav class="dropdown-actions">
                    <button data-type="modal" data-target="#edit-project-modal" class="dropdown-action">
                        <i class="fa-solid fa-pen-to-square"></i>
                        <span>Edit</span>
                    </button>
                    <button class="dropdown-action" href="#">
                        <i class="fa-solid fa-user-plus"></i>
                        <span>Add Member</span>
                    </button>
                </nav>
                <div class="dropdown-body">
                    <div class="divider"></div>
                    <nav class="dropdown-actions">
                        <a class="dropdown-action remove">
                            <i class="fa-solid fa-trash"></i>
                            <span>Delete Project</span>
                        </a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <p>@Html.Raw(Model.Description)</p>
    </div>
    <div class="card-footer">
        <div class="badge badge-warning">
            <i class="fa-solid fa-clock"></i>
            <span>5 day left</span>
        </div>
        <div class="members">
            <div class="user-image">
                <img src="/images/users/user-template-male-green.svg" alt="template user">
            </div>
            <div class="user-image">
                <img src="/images/users/user-template-male-green.svg" alt="template user">
            </div>
        </div>
    </div>
</div>
